{
    "name": "enreco-chart",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "prebuild": "pnpm run copy-resources",
        "build": "turbo run build:website",
        "prebuild:all": "pnpm run copy-resources",
        "build:all": "turbo run build",
        "copy-resources": "tsx scripts/core/copy-shared-resources.ts",
        "copy-shared-resources": "tsx scripts/core/copy-shared-resources.ts",
        "predev": "tsx scripts/core/optimize-images && pnpm copy-resources",
        "dev": "turbo run dev:website",
        "preeditor": "pnpm run copy-resources",
        "editor": "turbo run editor",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint",
        "optimize-images": "tsx scripts/core/optimize-images.ts",
        "generate-thumbnails": "tsx scripts/core/generate-thumbnails.ts",
        "extract-twitter-links": "tsx scripts/fanart/extract-twitter-links.ts",
        "download-images": "tsx scripts/fanart/download-images.ts",
        "inject-fanart": "tsx scripts/fanart/inject-fanart.ts",
        "export-glossary": "tsx scripts/glossary/export-glossary.ts",
        "inject-glossary": "tsx scripts/glossary/inject-glossary.ts",
        "validate-glossary": "tsx scripts/glossary/validate-glossary.ts",
        "cleanup": "tsx scripts/misc/cleanup.ts",
        "inject-texts": "tsx scripts/misc/inject-texts.ts",
        "inject-songs": "tsx scripts/misc/inject-songs.ts",
        "normalize-audio": "tsx scripts/misc/normalize-audio.ts",
        "inject-easter": "tsx scripts/misc/inject-easter.ts",
        "validate-text-ref": "tsx scripts/misc/validate-text-ref.ts",
        "validate-content": "tsx scripts/content/validate-content.ts",

        "proofread": "tsx scripts/proofread/proofread.ts",
        "export-recaps": "tsx scripts/recaps/export-recaps.ts",
        "inject-recaps": "tsx scripts/recaps/inject-recaps.ts",
        "validate-recaps": "tsx scripts/recaps/validate-recaps.ts",
        "inject-chapter-recaps": "tsx scripts/recaps/inject-chapter-recaps.ts"
    },
    "devDependencies": {
        "@enreco-archive/common": "workspace:*",
        "@enreco-archive/eslint-config": "workspace:*",
        "@enreco-archive/prettier-config": "workspace:*",
        "@enreco-archive/typescript-config": "workspace:*",
        "@textlint/textlint-plugin-markdown": "^15.1.1",
        "@textlint/types": "^15.2.0",
        "jszip": "catalog:",
        "music-metadata": "^11.3.0",
        "prettier": "catalog:",
        "puppeteer": "^24.11.1",
        "sharp": "^0.34.1",
        "textlint": "^15.1.1",
        "textlint-rule-common-misspellings": "^1.0.1",
        "tsx": "^4.19.4",
        "turbo": "^2.5.3",
        "@types/fluent-ffmpeg": "^2.1.27",
        "fluent-ffmpeg": "^2.1.3",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=22"
    }
    
}
