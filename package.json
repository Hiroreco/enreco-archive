{
    "name": "enreco-chart",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "prebuild": "pnpm run copy-resources",
        "build": "turbo run build:website",
        "prebuild:all": "pnpm run copy-resources",
        "build:all": "turbo run build",
        "copy-resources": "tsx scripts/generate-thumbnails.ts && tsx scripts/copy-shared-resources.ts",
        "predev": "tsx scripts/optimizt-images && pnpm copy-resources",
        "dev": "turbo run dev:website",
        "preeditor": "pnpm run copy-resources",
        "editor": "turbo run editor",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint",
        "convert-data-to-git": "tsx scripts/convert-data-to-git.ts",
        "optimize-images": "tsx scripts/optimize-images.ts",
        "export-recaps": "tsx scripts/export-recaps.ts",
        "export-glossary": "tsx scripts/export-glossary.ts",
        "inject-recaps": "tsx scripts/inject-recaps.ts",
        "validate-recaps": "tsx scripts/validate-recaps.ts",
        "cleanup": "tsx scripts/cleanup.ts",
        "inject-chapter-recaps": "tsx scripts/inject-chapter-recaps.ts",
        "inject-texts": "tsx scripts/inject-texts.ts",
        "inject-glossary": "tsx scripts/inject-glossary.ts",
        "inject-songs": "tsx scripts/inject-songs.ts",
        "normalize-audio": "tsx scripts/normalize-audio.ts",
        "extract-twitter-links": "tsx scripts/extract-twitter-links.ts",
        "download-images": "tsx scripts/download-images.ts",
        "inject-fanart": "tsx scripts/inject-fanart.ts"    
    },
    "devDependencies": {
        "@enreco-archive/common": "workspace:*",
        "@enreco-archive/eslint-config": "workspace:*",
        "@enreco-archive/prettier-config": "workspace:*",
        "@enreco-archive/typescript-config": "workspace:*",
        "jszip": "catalog:",
        "music-metadata": "^11.3.0",
        "prettier": "catalog:",
        "puppeteer": "^24.11.1",
        "sharp": "^0.34.1",
        "tsx": "^4.19.4",
        "turbo": "^2.5.3",
        "typescript": "catalog:"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=22"
    }
}
