{
    "name": "enreco-chart",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "packageManager": "pnpm@10.11.0",
    "scripts": {
        "copy-resources": "ts-node scripts/copy-shared-resources.js && ts-node scripts/optimize-images.js",
        "prebuild": "pnpm copy-resources",
        "build": "turbo build",
        "predev": "pnpm copy-resources",
        "dev": "turbo run dev-website",
        "editor": "turbo run editor",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@enreco-archive/eslint-config": "workspace:*",
        "@enreco-archive/prettier-config": "workspace:*",
        "@enreco-archive/typescript-config": "workspace:*",
        "prettier": "catalog:",
        "sharp": "^0.34.1",
        "ts-node": "^10.9.2",
        "turbo": "^2.4.2",
        "typescript": "catalog:"
    },
    "engines": {
        "node": ">=22"
    }
}
